@model IEnumerable<DAWeb.Models.SanPham>

@{
    ViewBag.Title = "Product List";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Product List</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Tên sản phẩm</th>
            <th>Mô tả</th>
            <th>Giá</th>
            <th>Số lượng</th>
            <th>Ảnh</th>
            <th>Danh Mục</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.TenSanPham)</td>
                <td>@Html.DisplayFor(modelItem => item.MoTa)</td>
                <td>@Html.DisplayFor(modelItem => item.Gia)</td>
                <td>@Html.DisplayFor(modelItem => item.SoLuongTon)</td>
                <td>
                    <img src="@Url.Content(item.AnhSanPham)" class="img-thumbnail" width="150" />
                </td>
                <td>@Html.DisplayFor(modelItem => item.DanhMuc.TenDanhMuc)</td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.MaSanPham }, new { @class = "btn btn-info" }) |
                    @Html.ActionLink("Edit", "Edit", new { id = item.MaSanPham }, new { @class = "btn btn-warning" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.MaSanPham }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
