@model DAWeb.Models.SanPham

@{
    ViewBag.Title = "Product Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <h2>Product Details</h2>
    <hr />
    <div class="row">
        <!-- Hình ảnh sản phẩm -->
        <div class="col-md-6">
            
            <img src="@Url.Content(Model.AnhSanPham)" class="img-fluid" width="300" />
        </div>

        <!-- Thông tin sản phẩm -->
        <div class="col-md-6">
            <h3>@Model.TenSanPham</h3>
            <p><strong>Giá:</strong> @Model.Gia VND</p>
            <p><strong>Mô tả:</strong> @Model.MoTa</p>
            <p><strong>Số lượng tồn:</strong> @Model.SoLuongTon</p>
            <p><strong>Danh mục:</strong> @Model.DanhMuc.TenDanhMuc</p>

            <!-- Liên kết đến trang chỉnh sửa hoặc quay lại danh sách -->
            <p>
                @Html.ActionLink("Edit", "Edit", new { id = Model.MaSanPham }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
            </p>
        </div>
    </div>
</div>
<style>
    h2 {
        color: #5a5a5a;
    }

    .img-fluid {
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 5px;
        width: 100%;
    }

    .btn {
        margin-top: 10px;
    }
</style>