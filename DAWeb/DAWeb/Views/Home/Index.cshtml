@model List<DAWeb.Models.SanPham>




<div class="category-tab">
  


    <div class="recommended-items">
        <h2 class="title text-center">Sản phẩm phổng biến</h2>
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-4 product-item">
                    <div class="product-card">
                        <img src="@Url.Content(product.AnhSanPham)" alt="@product.TenSanPham" class="product-image" />
                        <h4 class="product-name">@product.TenSanPham</h4>
                        <p class="product-price">@string.Format("{0:0,0} VND", product.Gia)</p>

                        <form action="@Url.Action("ChiTietSanPham", "Product", new { id = product.MaSanPham })" method="get">
                            <input type="hidden" name="productId" value="@product.MaSanPham" />
                            <input type="hidden" name="quantity" value="1" />
                            <button type="submit" class="btn btn-default add-to-cart">
                                <img style="width:30px; padding:2px; margin-top:3px;" src="~/images/icons/shopping-cart.png" /> Thêm vào giỏ
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>


</div><!--/category-tab-->
@*<h2 class="title text-center">recommended items</h2>*@
<div class="recommended_items">
    <!--recommended_items-->
    <!--recommended_items Nhẫn-->

    <div class="recommended_items">
        <h2 class="title text-center">NIKE</h2>


        <div id="recommended-item-carousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="item active">
                    @Html.Action("RecommendedItems", "Product", new { categoryId = 2 })
                </div>
            </div>
        </div>
    </div>
    <!--recommended_items Vòng-->

    <div class="recommended_items">
        <h2 class="title text-center">BALENCIAGA</h2>


        <div id="recommended-item-carousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="item active">
                    @Html.Action("RecommendedItems", "Product", new { categoryId = 3 })
                </div>
            </div>
        </div>
    </div>
    <!--recommended_items Bông Tai-->

    <div class="recommended_items">
        <h2 class="title text-center">DIOR</h2>


        <div id="recommended-item-carousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="item active">
                    @Html.Action("RecommendedItems", "Product", new { categoryId = 4 })
                </div>
            </div>
        </div>
    </div>
    <div class="recommended_items">
        <h2 class="title text-center">ADIDAS</h2>


        <div id="recommended-item-carousel" class="carousel slide" data-ride="carousel">
