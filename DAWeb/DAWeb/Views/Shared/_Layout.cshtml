<body>
    <header id="header">
        <!--header-->
        <div class="header-top">
            <!--header_top-->
            <div class="col-sm-8">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="mainmenu pull-left">
                    <ul class="nav navbar-nav collapse navbar-collapse">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li><a href="@Url.Action("SanPhamTheoDanhMuc", "Product", new { categoryId = 2 })">NIKE</a></li>
                        <li><a href="@Url.Action("SanPhamTheoDanhMuc", "Product", new { categoryId = 3 })">BALENCIAGA</a></li>
                        <li><a href="@Url.Action("SanPhamTheoDanhMuc", "Product", new { categoryId = 4 })">DIOR</a></li>
                        <li><a href="@Url.Action("SanPhamTheoDanhMuc", "Product", new { categoryId = 5 })">ADIDAS</a></li>

                    </ul>
                </div>
            </div>

            <div class="search_box pull-right">
                @using (Html.BeginForm("Search", "Home", FormMethod.Get))
                {
                    <input type="text" name="keyword" placeholder="Search" />
                    <button class="search_box button"><i class="fa fa-search"></i></button>
                }
            </div>



            <div class="col-sm-2">
                <div class="shop-menu pull-right">
                    <ul class="nav navbar-nav">
                        @*<li><a href="#"><img style="width:30px;padding:2px;margin-top:3px;" src="~/images/icons/checkout.png" /> Checkout</a></li>*@
                        <li>
                            <a href="@Url.Action("Index", "Cart")">
                                <img style="width:30px;padding:2px;margin-top:3px;" src="~/images/icons/shopping-cart.png" />
                                Giỏ hàng
                                <span class="badge badge-light" style="position: relative; top: -10px;  background-color: white; color: red;">
                                    @ViewBag.CartItemCount
                                </span>
                            </a>

                        </li>

                        @if (Session["userLogin"] == null)
                        {
                            <li>
                                <a href="@Url.Action("Login", "User")" style="display: block; width: 100%; height: 100%;">
                                    <img style="width:30px;padding:2px;margin-top:3px;" src="~/images/icons/login.png" />
                                    Đăng nhập
                                </a>
                                @*Đã chỉnh nút login trên thanh header-top khi người dùng đang ở trang đăng nhập*@
                                @*<img style="width:30px;padding:2px;margin-top:3px; position:absolute;" src="~/images/icons/login.png" />*@
                                @*@Html.ActionLink("Login", "Login", "User")*@
                            </li>

                            @* //Không bấm được, bỏ
                                <li>
                                    <img style="width: 30px; padding: 2px; margin-top: 3px; position: absolute;" src="~/images/icons/user.png" />
                                    Account
                                </li> *@
                        }
                        else
                        {
                            <li>
                                <a href="@Url.Action("UserDetails", "User")">
                                    <img style="width:30px;padding:2px;margin-top:3px;" src="~/images/icons/user.png" />
                                    @Session["userLogin"]
                                </a>
                            </li>

                            //Dùng để Logout, đã ném qua hàm UserDetails
                            @* <li style="top:-10px;">@Html.ActionLink("Đăng Xuất", "Logout", "User")</li> *@
                        }
                    </ul>
                </div>
            </div>

        </div>

        <div class="header-middle">
            <!--header-middle-->
            <div class="container">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="logo pull-left">
                            <a href="index.html"><img src="~/images/home/logo.png" alt="" /></a>
                        </div>

                    </div>



                </div>
            </div>
        </div><!--/header-middle-->
    </header><!--/header-->
    <section>
        <div class="container">
            <div class="row">
                @RenderBody()
