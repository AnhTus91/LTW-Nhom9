@model DAWeb.Models.NguoiDung

@{
    ViewBag.Title = "EditUserDetails";
}
<div class="edit-user-form">
    @using (Html.BeginForm("EditUserDetails", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <h2>Chỉnh Sửa Thông Tin Người Dùng</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.MaNguoiDung)

        <div class="form-group">
            @Html.LabelFor(model => model.HoTen, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DiaChi, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SoDienThoai, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.Label("ImageFile", "Hình ảnh", new { @class = "control-label" })
            <div class="input-group">
                <input type="file" name="ImageFile" class="form-control" />
            </div>
        </div>

        <button class="btn btn-success" formenctype="submit">Lưu thay đổi</button>
    }
</div>

<style>
    /* CSS chung cho form chỉnh sửa thông tin */
    .edit-user-form {
        max-width: 800px;
        margin: 0 auto; /* Căn giữa form */
        padding: 20px;
    }

        .edit-user-form h2 {
            text-align: center;
            color: #111;
            font-size: 20px;
            font-weight: bold;
        }

        .edit-user-form .form-group {
            margin-bottom: 20px;
        }

            .edit-user-form .form-group label {
                font-size: 18px;
                color: #111;
                font-weight: bold;
            }

        .edit-user-form .form-control {
            width: 100%;
            padding: 20px;
            margin-top: 5px;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow:none;
        }

            .edit-user-form .form-control:focus {
                border-color: #b08856;
                outline: none; /* Xóa đường viền mặc định */
            }

        .edit-user-form button {
            background-color: #b08856;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            cursor: pointer;
            font-size: 18px;
            display: block;
            margin: 0 auto;
            font-weight:bold;
        }


        .edit-user-form .text-danger {
            color: #e74c3c;
            font-size: 14px;
        }

        .edit-user-form .input-group {
            display: flex;
            align-items: center;
        }

        .edit-user-form input[type="file"] {
            padding: 8px;
            border-radius: 8px;
            border: 1px solid #ddd;
            margin-top: 5px;
            transition: border-color 0.3s;
        }

            .edit-user-form input[type="file"]:focus {
                border-color: #b08856;
            }

</style>