@model DAWeb.Models.NguoiDung


@{
    ViewBag.Title = "UserDetails";
}
<div class="user-details">
    <h3>@Model.HoTen</h3>
    <p><strong>Địa chỉ:</strong> @Model.DiaChi</p>
    <p><strong>Số điện thoại:</strong> @Model.SoDienThoai</p>
    <p>
        <strong>Ảnh đại diện:</strong><br />
        @if (!string.IsNullOrEmpty(Model.AnhDaiDien))
        {
            <img src="@Url.Content(Model.AnhDaiDien)" alt="Ảnh đại diện" style="width: 150px; height: 150px;" />


        }
        else
        {
            <span>Chưa có ảnh đại diện</span>
        }
    </p>

    @*<p>@Html.ActionLink("Xem lịch sử đơn hàng", "OrderHistory", "User", new { id = Model.MaNguoiDung }, new { @class = "btn btn-primary" })</p>
        <p>@Html.ActionLink("Edit", "EditUserDetails")</p>
        <p style="top:-10px;">@Html.ActionLink("Đăng Xuất", "Logout", "User")</p>*@
    @*<li style="top:-10px;">@Html.ActionLink("Đăng Xuất", "Logout", "User")</li>*@
    <div class="button-container">
        <a href="@Url.Action("OrderHistory", "User", new { id = Model.MaNguoiDung })">Xem lịch sử đơn hàng</a>
        <a href="@Url.Action("EditUserDetails")">Sửa thông tin</a>
        <div class="logout-button">
            <a href="@Url.Action("Logout", "User")">Đăng Xuất</a>
        </div>
    </div>
</div>
<style>
    /* CSS cho UserDetails */
    .user-details {
        width: 100%;
        max-width: 700px; /* Giới hạn chiều rộng */
        margin: 50px auto; /*margin cho ô thông tin*/
        background-color: #fff; /* Nền trắng để dễ đọc */
        border-radius: 12px; /* Bo tròn góc */
        padding: 20px 20px 20px 20px; /* Padding thoải mái */
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1); /* Đổ bóng nhẹ */
        font-family: 'Arial', sans-serif; /* Font chữ dễ đọc */
        /*transition: transform 0.3s;*/ /* Hiệu ứng chuyển động */
    }

        .user-details h3 {
            font-size: 30px; /* Kích thước tiêu đề lớn hơn */
            font-weight: bold;
            color: #333; /* Màu chữ tối */
            text-align: center;
            margin: 0 0 15px 0;
            border-bottom: 2px solid #c8d6b9; /* Đường viền dưới */
            padding-bottom: 10px; /* Khoảng cách dưới tiêu đề */
        }

        .user-details p {
            font-size: 20px; /* Kích thước chữ chính */
            color: #555; /* Màu chữ xám */
            margin-bottom: 15px; /* Khoảng cách giữa các đoạn */
            line-height: 1.5; /* Khoảng cách giữa các dòng */
        }

        .user-details span {
            color: #999; /* Màu chữ nhạt */
            display: block;
            text-align: center;
            margin: 10px;
        }

        .user-details a {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px; /* Padding thoải mái cho nút */
            background-color: #98a38c; /*Màu nền xanh */
            color: #fff; /* Màu chữ trắng */
            text-align: center;
            border-radius: 8px; /* Bo tròn góc nút */
            text-decoration: none; /* Không gạch chân */
            font-size: 20px; /* Kích thước chữ nút */
            font-weight: bold; /* Chữ đậm */
            border-style: none;
        }

            .user-details a:hover {
                background-color: #ffa80f; /*Màu nền xanh */
                color: #111;
            }

    .button-container {
        position: relative; /* Để đặt nút "Đăng Xuất" ở vị trí tuyệt đối */
    }

    .logout-button {
        position: absolute;
        bottom: 0;
        right: 0;
    }

        .logout-button a:hover {
            background-color: #ff3c37; /*Màu nền xanh */
            color: #111;
        }
</style>