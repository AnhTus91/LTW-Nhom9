@model IEnumerable<DAWeb.Models.SanPham>
<div class="category-tab">
    <div class="recommended-items">
        <ul class="products">
            @foreach (var product in Model)
            {
                <li>
                    <div class="product-item">
                        <a href="@Url.Action("ChiTietSanPham", "Product", new { id = product.MaSanPham })">
                            <div class="product-top">
                                <img src="@Url.Content(product.AnhSanPham)" alt="@product.TenSanPham" class="product-thumb" />
                                <form class="buy-now" action="@Url.Action("ChiTietSanPham", "Product", new { id = product.MaSanPham })" method="get">
                                    <input type="hidden" name="productId" value="@product.MaSanPham" />
                                    <input type="hidden" name="quantity" value="1" />
                                    <button type="submit" class="btn btn-default add-to-cart">Mua ngay</button>
                                </form>
                            </div>
                            <div class="product-info">
                                <a href="" class="product-name">@product.TenSanPham</a>
                                <div class="product-price">@product.Gia.ToString("N0") <span class='vnd-symbol'>đ</span></div>
                            </div>
                        </a>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>
<style>
    .vnd-symbol {
        font-size: 1.1em; /* Tăng kích thước chữ */
        text-decoration: underline;
    }
</style>

